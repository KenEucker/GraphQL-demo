{
  "name": "graphql-demo",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "build": "vue-tsc && vite build",
    "dev": "concurrently \"npm:dev-server\" \"npm:dev-client\" -n \"server, client\" -c \"auto\"",
    "dev-server": "concurrently \"nodemon --watch './src/schema/**/*.ts' --exec 'ts-node --experimental-specifier-resolution=node --project tsconfig-server.json' server.ts\" \"graphql-codegen -w\" ",
    "dev-client": "vite",
    "compile": "graphql-codegen",
    "lint": "yarn lint:js && yarn lint:style",
    "lint:js": "eslint --ext .ts,.js,.vue src --fix",
    "lint:style": "stylelint \"./src/**/*.vue\" \"./src/**/*.scss\" --fix",
    "preview": "vite preview"
  },
  "dependencies": {
    "@apollo/client": "^3.7.2",
    "@vue/apollo-composable": "^4.0.0-beta.1",
    "@vueuse/components": "^9.6.0",
    "@vueuse/core": "^9.6.0",
    "@vueuse/motion": "^2.0.0-beta.12",
    "graphql": "^16.6.0",
    "graphql-tag": "^2.12.6",
    "uuid": "^9.0.0",
    "vue": "^3.2.45"
  },
  "devDependencies": {
    "@apollo/server": "^4.3.0",
    "@graphql-codegen/cli": "2.16.1",
    "@graphql-codegen/client-preset": "1.2.3",
    "@graphql-codegen/introspection": "^2.2.3",
    "@graphql-codegen/named-operations-object": "^2.3.1",
    "@graphql-codegen/near-operation-file-preset": "^2.4.4",
    "@graphql-codegen/typescript": "^2.8.5",
    "@graphql-codegen/typescript-apollo-client-helpers": "^2.2.6",
    "@graphql-codegen/typescript-operations": "^2.5.10",
    "@graphql-codegen/typescript-resolvers": "^2.7.10",
    "@graphql-codegen/typescript-vue-apollo": "^3.3.6",
    "@types/uuid": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^5.46.1",
    "@vitejs/plugin-vue": "^4.0.0",
    "concurrently": "^7.6.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.30.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-formatter-friendly": "^7.0.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-vue": "^9.8.0",
    "graphql-yoga": "^3.1.1",
    "nodemon": "^2.0.20",
    "postcss": "^8.4.20",
    "postcss-html": "^1.5.0",
    "sass": "^1.56.2",
    "stylelint": "^14.16.0",
    "stylelint-config-prettier": "^9.0.4",
    "stylelint-config-standard": "^29.0.0",
    "stylelint-config-standard-scss": "^6.1.0",
    "stylelint-order": "^5.0.0",
    "stylelint-selector-bem-pattern": "^2.1.1",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.9.3",
    "vite": "^4.0.0",
    "vue-tsc": "^1.0.11"
  }
}
